if [ "${CONTAINER_ENABLE_MONITORING,,}" = "true" ]; then
    if [ -f "/container/base/defaults/monitoring/${CONTAINER_MONITORING_BACKEND,,}" ]; then
        source /container/base/defaults/monitoring/"${CONTAINER_MONITORING_BACKEND,,}"
    fi
fi